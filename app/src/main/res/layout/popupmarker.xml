<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/cancelpopup"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_cancel"
        android:backgroundTint="#7c000000"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"/>

    <TextView
        android:layout_below="@id/cancelpopup"
        android:textSize="12pt"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Username"
        android:id="@+id/popname"
        android:layout_marginBottom="4dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@id/popname"
        android:id="@+id/reltentang"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:clickable="true">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ictelephone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_action_telephone"
            app:civ_fill_color="@color/toska"
            app:civ_border_width="4dp"
            app:civ_border_color="#3b000000"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"/>
        <TextView
            android:id="@+id/popuptelephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="telephone"
            android:textSize="10pt"
            android:layout_gravity="center"/>
    </LinearLayout>


</RelativeLayout>