<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/cancelpopup"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_cancel"
        android:backgroundTint="#000"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"/>

    <TextView
        android:layout_below="@id/cancelpopup"
        android:textSize="20dp"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:text="Username"
        android:id="@+id/popname"
        android:layout_marginBottom="4dp"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_below="@id/popname"
        android:id="@+id/reltentang"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:clickable="true">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ictelephone"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_telephone"
            app:civ_fill_color="@color/toska"
            app:civ_border_width="6dp"
            app:civ_border_color="@color/toska"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/popuptelephone"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingTop="14dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="68dp"
            android:background="@null"
            android:text="telephone"
             />
        <TextView
            android:layout_below="@id/popuptelephone"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"/>
    </RelativeLayout>


</RelativeLayout>