<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="abdul.malik.intaihere.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/logoawal" />

        <TextView
            android:id="@+id/TextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Silahkan Mendaftar"
            android:textColor="#fff"
            android:textSize="16dip"
            android:layout_marginTop="15dp"/>
        <ProgressBar
            android:visibility="invisible"
            android:id="@+id/progressBar"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="-10dp"/>

        <EditText
            android:id="@+id/txt_usernamereg"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Username"
            android:drawableLeft="@drawable/ic_action_user"
            android:background="#11000000"
            android:inputType="text"
            android:layout_marginTop="-20dp" />
        <EditText
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="name@email.com"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/ic_action_email"
            android:background="#11000000"
            android:id="@+id/txtEmailAddress"
            android:layout_marginTop="10dp" />
        <EditText
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="08xx x"
            android:drawableLeft="@drawable/ic_action_phone"
            android:background="#11000000"
            android:id="@+id/txt_telephonereg"
            android:inputType="phone"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/txt_passwordreg"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Password"
            android:drawableLeft="@drawable/ic_action_lock"
            android:background="#11000000"
            android:password="true"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btn_registerreg"
            android:layout_width="330dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_radius"
            android:text="Daftar"
            android:textColor="#fff"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageViewor"
            android:layout_width="350dp"
            android:layout_height="37dp"
            app:srcCompat="@drawable/or"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudah Punya Akun?"
            android:textColor="#fff"
            android:layout_below="@+id/imageViewor"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/btn_loginreg"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:textColor="#ff0"
            android:text="masuk"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"/>

    </LinearLayout>

</ScrollView>
