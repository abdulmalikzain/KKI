<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="abdul.malik.intaihere.MenuTask.DetailTaskActivity">

    <ImageView
        android:id="@+id/iv_detGambar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/txtclose_detailstatus"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_cancel"
        android:backgroundTint="#000"
        android:layout_marginTop="-560dp"
        android:layout_below="@id/iv_detGambar"/>

    <TextView
        android:id="@+id/tv_detUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_below="@id/txtclose_detailstatus"/>
    <TextView
        android:id="@+id/tv_detWaktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waktu"
        android:layout_below="@id/tv_detUsername"/>

    <TextView
        android:id="@+id/tv_detTujuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tujuan"
        android:layout_below="@id/tv_detWaktu"/>
    <TextView
        android:id="@+id/tv_detStatus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="status"
        android:textAlignment="center"
        android:background="#d4d4d4"
        android:layout_marginTop="400dp"
        android:layout_below="@id/tv_detTujuan"/>
</RelativeLayout>
